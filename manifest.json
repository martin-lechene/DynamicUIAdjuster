{
  "manifest_version": 3,
  "name": "Site Customizer",
  "description": "Adapte l'interface des sites en fonction de vos habitudes.",
  "version": "1.0",
  "permissions": ["storage", "activeTab"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}
